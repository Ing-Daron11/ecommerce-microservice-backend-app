{
  "info": {
    "_postman_id": "e2e-ecommerce-flows",
    "name": "E2E Ecommerce Microservices Tests",
    "description": "End-to-End tests for complete user journeys in ecommerce microservices. Use {{base_url}} variable for different environments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. User Registration & Login",
      "item": [
        {
          "name": "1.1 - Register New User",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "if (!pm.environment.get('userEmail') || pm.environment.get('userEmail').includes('{{')) {",
                  "    var timestamp = Date.now();",
                  "    var email = 'testuser' + timestamp + '@example.com';",
                  "    pm.environment.set('userEmail', email);",
                  "    pm.environment.set('userPassword', 'TestPassword123!');",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200 or 201', function () {",
                  "    var statusCode = pm.response.code;",
                  "    pm.expect([200, 201]).to.include(statusCode);",
                  "});",
                  "",
                  "pm.test('Response has userId', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('userId');",
                  "    pm.environment.set('userId', jsonData.userId);",
                  "});",
                  "",
                  "pm.test('User email exists', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('email');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"{{userEmail}}\",\n  \"phone\": \"555-1234\",\n  \"imageUrl\": \"https://example.com/image.jpg\",\n  \"addressDtos\": [{\n    \"fullAddress\": \"123 Main St\",\n    \"postalCode\": \"12345\",\n    \"city\": \"Test City\"\n  }],\n  \"credential\": {\n    \"username\": \"{{userEmail}}\",\n    \"password\": \"{{userPassword}}\",\n    \"roleBasedAuthority\": \"ROLE_USER\",\n    \"isEnabled\": true,\n    \"isAccountNonExpired\": true,\n    \"isAccountNonLocked\": true,\n    \"isCredentialsNonExpired\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/app/api/users",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "app",
                "api",
                "users"
              ]
            }
          }
        },
        {
          "name": "1.2 - User Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has jwtToken', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('jwtToken');",
                  "    pm.environment.set('authToken', jsonData.jwtToken);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/app/api/authenticate",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "app",
                "api",
                "authenticate"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "2. Browse Products",
      "item": [
        {
          "name": "2.1 - Get All Products",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has collection', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('collection');",
                  "    pm.expect(jsonData.collection).to.be.an('array');",
                  "    pm.expect(jsonData.collection.length).to.be.greaterThan(0);",
                  "});",
                  "",
                  "pm.test('Store first product ID', function () {",
                  "    var jsonData = pm.response.json();",
                  "    var firstProduct = jsonData.collection[0];",
                  "    pm.environment.set('productId', firstProduct.productId);",
                  "    pm.environment.set('productPrice', firstProduct.priceUnit);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/products",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "products"
              ]
            }
          }
        },
        {
          "name": "2.2 - Get Product Details",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Product details are complete', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('productId');",
                  "    pm.expect(jsonData).to.have.property('productTitle');",
                  "    pm.expect(jsonData).to.have.property('priceUnit');",
                  "    pm.expect(jsonData).to.have.property('quantity');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/products/{{productId}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "products",
                "{{productId}}"
              ]
            }
          }
        }
      ]
    },
