{
  "info": {
    "_postman_id": "feature-toggle-collection",
    "name": "Feature Toggle Testing - Products Readonly Mode",
    "description": "Collection to test the Feature Toggle implementation for Products Read-only Mode",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "0. CREATE TEST USER (Run once)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('User created successfully or already exists', function () {",
              "    pm.expect([200, 201, 409]).to.include(pm.response.code);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"email\": \"test@example.com\",\n  \"phone\": \"1234567890\",\n  \"credential\": {\n    \"username\": \"test@example.com\",\n    \"password\": \"Test@123\",\n    \"roleBasedAuthority\": \"ROLE_USER\",\n    \"isEnabled\": true,\n    \"isAccountNonExpired\": true,\n    \"isAccountNonLocked\": true,\n    \"isCredentialsNonExpired\": true\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users",
          "host": ["{{base_url}}"],
          "path": ["api", "users"]
        }
      }
    },
    {
      "name": "1. LOGIN & GET JWT TOKEN",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "pm.environment.set('jwt_token', jsonData.jwtToken);",
              "pm.test('JWT Token saved to environment', function () {",
              "    pm.expect(pm.environment.get('jwt_token')).to.be.truthy();",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"test@example.com\",\n  \"password\": \"Test@123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/authenticate",
          "host": ["{{base_url}}"],
          "path": ["api", "authenticate"]
        }
      }
    },
    {
      "name": "2. GET Products (Always Available - No Auth)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has collection', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('collection');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/products",
          "host": ["{{base_url}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "3. GET Product by ID (Always Available - No Auth)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has productId', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('productId');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/products/1",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "1"]
        }
      }
    },
    {
      "name": "4. CREATE Product (Blocked when readonly=true)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200/201 (readonly=false) or 403 (readonly=true)', function () {",
              "    pm.expect([200, 201, 403]).to.include(pm.response.code);",
              "});",
              "",
              "if (pm.response.code === 403) {",
              "    pm.test('Feature Toggle is ENABLED - Write operations blocked', function () {",
              "        pm.expect(pm.response.code).to.equal(403);",
              "    });",
              "} else {",
              "    pm.test('Feature Toggle is DISABLED - Write operations allowed', function () {",
              "        pm.expect([200, 201]).to.include(pm.response.code);",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productTitle\": \"Test Product\",\n  \"description\": \"A test product for feature toggle testing\",\n  \"priceUnit\": 99.99,\n  \"stockQuantity\": 50\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/products",
          "host": ["{{base_url}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "5. UPDATE Product (Blocked when readonly=true)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200 (readonly=false) or 403 (readonly=true)', function () {",
              "    pm.expect([200, 403]).to.include(pm.response.code);",
              "});",
              "",
              "if (pm.response.code === 403) {",
              "    pm.test('Feature Toggle is ENABLED - Update operations blocked', function () {",
              "        pm.expect(pm.response.code).to.equal(403);",
              "    });",
              "} else {",
              "    pm.test('Feature Toggle is DISABLED - Update operations allowed', function () {",
              "        pm.expect(pm.response.code).to.equal(200);",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productTitle\": \"Updated Product\",\n  \"description\": \"Updated description\",\n  \"priceUnit\": 149.99,\n  \"stockQuantity\": 75\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/products/1",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "1"]
        }
      }
    },
    {
      "name": "6. DELETE Product (Blocked when readonly=true)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200 (readonly=false) or 403 (readonly=true)', function () {",
              "    pm.expect([200, 403]).to.include(pm.response.code);",
              "});",
              "",
              "if (pm.response.code === 403) {",
              "    pm.test('Feature Toggle is ENABLED - Delete operations blocked', function () {",
              "        pm.expect(pm.response.code).to.equal(403);",
              "    });",
              "} else {",
              "    pm.test('Feature Toggle is DISABLED - Delete operations allowed', function () {",
              "        pm.expect(pm.response.code).to.equal(200);",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/products/1",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "1"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/app",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ]
}
